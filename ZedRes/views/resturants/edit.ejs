<% include ../partials/header %>

<div class="container">	
		<h1 style="text-align: center;">Edit <%= resturant.name %></h1>
		<div style="width: 30%; margin: 25px auto">
			<form action="/resturants/<%= resturant._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="resturant[name]" value= "<%= resturant.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="resturant[image]" value= "<%= resturant.image %>">
				</div>	
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="resturant[price]" value= "<%= resturant.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="resturant[description]" value= "<%= resturant.description %>">
				</div>	
				<div class="form-group">
					<button class="btn btn-primary btn-block">Submit</button>
				</div>	
			</form>
			<a href="/resturants">Go back</a>
		</div>		
</div>
<% include ../partials/footer %>